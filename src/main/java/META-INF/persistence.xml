<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="raPU">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/RegistroAcademico</jta-data-source>
		<class>sv.com.registroacademico.model.CgAcreedores</class>
		<class>sv.com.registroacademico.model.CgAreaConocimiento</class>
		<class>sv.com.registroacademico.model.CgCarreras</class>
		<class>sv.com.registroacademico.model.CgEstadofam</class>
		<class>sv.com.registroacademico.model.CgEstadoPersona</class>
		<class>sv.com.registroacademico.model.CgGrados</class>
		<class>sv.com.registroacademico.model.CgMetaActLaboral</class>
		<class>sv.com.registroacademico.model.CgMetaConvivencia</class>
		<class>sv.com.registroacademico.model.CgMetaGenero</class>
		<class>sv.com.registroacademico.model.CgMetaTipoSangre</class>
		<class>sv.com.registroacademico.model.CgMetaTransporte</class>
		<class>sv.com.registroacademico.model.CgMunicipios</class>
		<class>sv.com.registroacademico.model.CgNivelAcademico</class>
		<class>sv.com.registroacademico.model.CgPaises</class>
		<class>sv.com.registroacademico.model.CgParentesco</class>
		<class>sv.com.registroacademico.model.CgTipoMateria</class>
		<class>sv.com.registroacademico.model.Empresa</class>
		<class>sv.com.registroacademico.model.Materia</class>
		<class>sv.com.registroacademico.model.SysMenu</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
		
	</persistence-unit>
	
</persistence>
